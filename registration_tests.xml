<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <parameter name="registrationUrl" value="index.php?controller=authentication&amp;back=my-account" />
    <test verbose="2" preserve-order="true"
          name="RegistrationTest">
        <classes>
            <class name="com.ilkow.sperasoft.RegistrationTest">
                <methods>
                    <include name="testAllFieldsAreAvailable"/>
                    <include name="testRegistrationSucceeded"/>
                    <include name="testRegistrationFailed"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>